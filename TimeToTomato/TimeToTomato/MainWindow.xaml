<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="TimeToTomato.MainWindow"
        Title="TTT" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True"
        d:DesignWidth="158" d:DesignHeight="95">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock FontSize="20" Margin="5,0" HorizontalAlignment="Center" Text="{Binding ElapsedSeconds}"><Run Text="00:00"/></TextBlock>
        <StackPanel Orientation="Horizontal" Height="30">
            <Button Background="#FFA1D8A9" Width="35" Content="Work" Command="{Binding StartWorkCommand}"/>
            <Button Width="35" Content="Short" Command="{Binding StartShortBreakCommand}"/>
            <Button Width="35" Content="Long" Command="{Binding StartLongBreakCommand}"/>
            <Button Content="Stop" Width="35" Background="#FFD39393" Command="{Binding StopCommand}"/>
        </StackPanel>
    </StackPanel>
</Window>
